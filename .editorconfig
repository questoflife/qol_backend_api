# EditorConfig helps maintain consistent coding styles
root = true

# All files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Python files
[*.py]
indent_style = space
indent_size = 4

# YAML/Docker files
[*.{yml,yaml}]
indent_style = space
indent_size = 2

[Dockerfile*]
indent_style = space
indent_size = 4

# Markdown
[*.md]
indent_style = space
indent_size = 4
trim_trailing_whitespace = false

# JSON
[*.json]
indent_style = space
indent_size = 2
