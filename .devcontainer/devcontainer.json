// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/docker-existing-docker-compose
{
	"name": "QoL Backend API Dev Container with DB",

	// Update the 'dockerComposeFile' list if you have more compose files or use different names.
	// These paths are relative to the .devcontainer directory
	"dockerComposeFile": [
		"../dev/docker-compose.dev.yml",
		"../dev/docker-compose.dev.db-override.yml"
	],

	// The 'service' property is the name of the service for the container that VS Code should
	// use. Update this value and .devcontainer/docker-compose.yml to the real service name.
	"service": "dev",

	// Pre-build base images that dev depends on
	"initializeCommand": "docker compose -f dev/docker-compose.dev.yml build runtime-base testing-builder",

	// Start both dev and db services explicitly to ensure VS Code manages both
	"runServices": ["dev", "db"],

	// Cleanup command when dev container shuts down
	"shutdownAction": "stopCompose",

	// The optional 'workspaceFolder' property is the path VS Code should open by default when
	// connected. This is typically a file mount in .devcontainer/docker-compose.yml
	"workspaceFolder": "/qol_backend_api",


	// VS Code extensions to install in the container
	"customizations": {
		"vscode": {
			"extensions": [
				// Python development essentials
				"ms-python.python"
			]
		}
	}

	// NOTE: No remoteUser needed - user is already set in Dockerfile (USER appuser) 
	// and docker-compose.yml (user: "1000:1000"). Adding remoteUser here is redundant.
}
