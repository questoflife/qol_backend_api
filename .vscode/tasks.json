{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run Tests (testing-db container)",
            "type": "shell",
            "command": "docker compose run --rm --build testing-db",
            "group": "test"
        },
        {
            "label": "Production Up",
            "type": "shell", 
            "command": "docker compose up --build prod",
            "group": "build"
        },
        {
            "label": "Production Down",
            "type": "shell",
            "command": "docker compose stop prod && docker compose rm -f prod",
            "group": "build"
        }
    ]
}
